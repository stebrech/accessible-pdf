<!doctype html>
<html lang="{{ page.lang }}" dir="{{ dir }}">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title }} | accessible-pdf.info</title>
		<meta name="description" content="{{ description or i18n.description[page.lang] }}">

		{#- Atom and JSON feeds included by default #}
		<link rel="alternate" href="/feed/feed.xml" type="application/atom+xml" title="{{ i18n.title[page.lang] }}">
		<link rel="alternate" href="/feed/feed.json" type="application/json" title="{{ i18n.title[page.lang] }}">

		{#- Stylesheets #}
		<link rel="stylesheet" href="/assets/styles/reset.css">
		<link rel="stylesheet" href="/assets/styles/accessibility.css">
		<link rel="stylesheet" href="/assets/styles/elements.css">
		<link rel="stylesheet" href="/assets/styles/layout.css">
		<link rel="stylesheet" href="/pagefind/pagefind-ui.css">

		{#- Favicons #}
		<link rel="icon" href="/favicon.ico" sizes="any"><!-- 32×32 -->
		<link rel="icon" href="/logo_accessiblePDF.svg" type="image/svg+xml">
		<link rel="apple-touch-icon" href="/apple-touch-icon.png"><!-- 180×180 -->

		{#- Manifest #}
		<link rel="manifest" href="/manifest.webmanifest">

		{#- Open Graph #}
		<meta property="og:title" content={{ title }} />
		<meta property="og:description" content={{ description }} />
		<meta property="og:type" content="website" />
		<meta name="twitter:card" content="summary" />
		<meta name="twitter:creator" content={{ author }} />
		<meta name="twitter:title" content={{ title }} />
		<meta name="twitter:description" content={{ description }} />

		{#- Love for 11ty #}
		<meta name="generator" content="{{ eleventy.generator }}">

		{#- Pagefind script #}
		<script src="/assets/js/search.js" defer></script>
		<script src="/pagefind/pagefind-ui.js" defer></script>
		<script>
			window.addEventListener('DOMContentLoaded', (event) => {
				new PagefindUI({ element: "#search", showSubResults: true });
			});
		</script>
		{#- Remove former service worker #}
		<script>
			if ('serviceWorker' in navigator) {
				navigator.serviceWorker.getRegistrations().then(function(registrations) {
					for (let registration of registrations) {
						registration.unregister();
					}
				});
			}
		</script>

	</head>
	<body>
		<a href="#primary" class="skip-link screen-reader-text">{{ i18n.site.skipToContent[page.lang] }}</a>

		{% include "../includes/header.njk" %}

		<main id="primary" class="site_main base_grid">
			<div id="search-container" class="base_grid screen-reader-text" aria-hidden="true">
				<div id="search"></div>
				<div id="search-close-container">
					<button id="search-close" aria-label="Schliessen">Suche schliessen</button>
				</div>
			</div>
			{{ content | safe }}
		</main>

		{% include "../includes/footer.njk" %}
	</body>
</html>